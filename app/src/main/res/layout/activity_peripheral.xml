<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.esec.mcg.bleinsight.PeripheralActivity">

    <TableLayout
        android:id="@+id/peripheral_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TableRow
            android:id="@+id/peripheral_name_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:text="Peripheral:"/>

            <TextView
                android:id="@+id/peripheral_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="99"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:id="@+id/peripheral_rssi_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:text="RSSI:"/>

            <TextView
                android:id="@+id/peripheral_rssi"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="99"
                android:textStyle="italic"/>

        </TableRow>

        <TableRow
            android:id="@+id/peripheral_address_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:text="Address:"/>

            <TextView
                android:id="@+id/peripheral_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="99"
                android:textStyle="italic" />

        </TableRow>

        <TableRow
            android:id="@+id/peripheral_status_row"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:text="Status"/>

            <TextView
                android:id="@+id/peripheral_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="99"
                android:text="Disconnected"
                android:textStyle="italic"/>

        </TableRow>

    </TableLayout>

    <ExpandableListView
        android:id="@+id/service_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/peripheral_header"
        android:dividerHeight="2dp"
        android:background="#f4f4f4"
        android:childDivider="#00000000"
        android:cacheColorHint="#00000000"
        android:scrollbarSize="0dp"
        android:divider="#00000000"/>

</RelativeLayout>
