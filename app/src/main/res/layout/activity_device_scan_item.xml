<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="@dimen/abc_list_item_padding_horizontal_material">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_device_name"
            android:text="device_name"
            android:textSize="@dimen/abc_text_size_headline_material"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="device_address"
            android:id="@+id/tv_device_address"
            android:layout_below="@+id/tv_device_name"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bond_state"
            android:id="@+id/tv_bond_state"
            android:layout_below="@+id/tv_device_address"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rssi_value"
            android:id="@+id/tv_rssi_value"
            android:layout_below="@+id/tv_device_address"
            android:layout_toEndOf="@+id/tv_device_address" />

        <Button
            style="@style/Button"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="connect"
            android:id="@+id/btn_connect"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:focusable="false"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_filt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="过滤"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</LinearLayout>
