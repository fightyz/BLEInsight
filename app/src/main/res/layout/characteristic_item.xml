<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/characteristic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Characteristic Name"
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/characteristic_uuid_value" />

        <TextView
            android:id="@+id/characteristic_uuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UUID"
            android:textStyle="bold"
            android:layout_below="@+id/characteristic_name"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/characteristic_uuid_value"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="uuid value"
            android:layout_below="@+id/characteristic_name"
            android:layout_toRightOf="@+id/characteristic_uuid"
            android:paddingLeft="8dp" />

        <TextView
            android:id="@+id/characteristic_properties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Properties"
            android:textStyle="bold"
            android:layout_below="@+id/characteristic_uuid_value"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/characteristic_properties_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="properties value"
            android:layout_below="@+id/characteristic_uuid_value"
            android:layout_toRightOf="@+id/characteristic_properties"
            android:paddingLeft="8dp"
            android:layout_toStartOf="@+id/write_button" />

        <Button
            android:id="@+id/read_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:text="read"
            android:textSize="8sp"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/characteristic_name"
            android:layout_toEndOf="@+id/characteristic_properties_value" />

        <Button
            android:id="@+id/write_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:text="write"
            android:textSize="8sp"
            android:visibility="invisible"
            android:layout_below="@+id/read_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/characteristic_properties_value" />

        <CheckBox
            android:id="@+id/cccd_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:visibility="invisible"
            android:layout_below="@+id/write_button"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/characteristic_properties_value" />

        <TextView
            android:id="@+id/cccd_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOTIFY"
            android:textColor="#1E88E5"
            android:textStyle="bold"
            android:visibility="invisible"
            android:layout_below="@+id/characteristic_uuid_value"
            android:layout_toLeftOf="@+id/cccd_check" />

    </RelativeLayout>


</RelativeLayout>