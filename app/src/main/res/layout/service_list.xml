<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/service_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_sqr_white"
        >

        <TextView
            android:id="@+id/service_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:text="service name"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/service_uuid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_name"

            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="SERVICE UUID"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/service_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_uuid"

            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:text="PRIMARY SERVICE"
            android:textSize="15sp"/>

    </RelativeLayout>
